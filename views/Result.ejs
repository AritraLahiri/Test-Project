<%- include('partials/head') %>
<div class="container">
    <h1 class="text-success text-center my-5">Found <%= data.length %> total results</h1>
    <div class="container">
        <div class="row my-5">
            <% if(data.length < 1){  %>
            <h1 class="text-muted text-center">No Result Found</h1>

            <%  } else { %>

            <% for(let user of data){  %>

            <div class="col-6 col-md-4">

                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%= user.name %> </h5>

                        <p class="card-text"><%= user.location %> </p>
                    </div>
                </div>

            </div>

            <% } } %>

        </div>
    </div>
</div>
<%- include('partials/footer') %>